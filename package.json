{
  "name": "my-react-template-webpack",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^7.1.0",
    "@reduxjs/toolkit": "^2.1.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "antd": "^5.13.3",
    "axios": "^1.6.7",
    "moment": "^2.30.1",
    "node-sass": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.21.3",
    "react-scripts": "5.0.1",
    "sass": "^1.70.0",
    "typescript": "^5.3.3",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "craco start",
    "build": "npm run build:prod",
    "test": "craco test",
    "eject": "react-scripts eject",
    "preinstall": "npm config set registry http://registry.npmmirror.com",
    "install:dev": "npm install --legacy-peer-deps",
    "build:dev": "REACT_APP_ENV=DEV DISABLE_ESLINT_PLUGIN=true craco build",
    "build:test": "REACT_APP_ENV=TEST DISABLE_ESLINT_PLUGIN=true craco build",
    "build:prod": "REACT_APP_ENV=PROD DISABLE_ESLINT_PLUGIN=true craco build",
    "commit": "git-cz",
    "eslint": "eslint ./ --fix",
    "p": "# 一键创建文件 \n plop",
    "//": "一键更新hrtps组件库",
    "prepare": "husky install && npm config set registry http://registry.npm.hrtps.com",
    "removeComponents": "npm remove @hrtps/antd",
    "addComponents": "npm add @hrtps/antd --registry http://registry.npm.hrtps.com --legacy-peer-deps",
    "updatecomponents": "npm-run-all removeComponents addComponents",
    "addComponents:Beta": "npm add @hrtps/antd@beta --registry http://registry.npm.hrtps.com --legacy-peer-deps",
    "updatecomponents:Beta": "npm-run-all removeComponents addComponents:Beta"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "eslint": "^8.56.0",
    "eslint-config-pink": "^0.0.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.0",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "eslint --fix"
    ]
  }
}
